<div class="borrow container col-sm-2 col-md-2 col-lg-5 col-xl-2 xxl-1 justify-content-center" style="width:70%;" >
            <form action="" method="POST">
            <div id="borrowForm">
                <div class="heading text-dark text-20px   mb-4"><b> Borrow this Material </b> </div>

                <div class="row">

                    <div class="col font-weight-bold "> 
                      <div class="text-danger"><b> Book Title</b> </div>
                      <%=book.title  %>
                    </div>

                <div class="col font-weight-bold">
                  <div class="text-danger"><b>Author Name</b></div>
                    <%=book.author  %>            
                 </div>

                </div> <br>

                <div class="row">

                    <div class="col font-bold">
                      <div class="text-danger"><b>Book ISSBN </b></div>
                        <%= book.issbn %>
                    </div> <br>
                    
                    <div class="col font-bold">
                        <div class="text-danger"><b>Book Location </b> </div>
                      <%= book.location %>
                    </div>

                 </div>   <br>


                <div class="row">

                    <div class="col font-bold">
                      <div class="text-danger"> <b>Date-Borrowed</b> </div>
                      <%= new Date().toDateString() %>
                    </div> <br>

                    <div class="col font-bold">
                      <div class="text-danger"> <b>Due-Date </b></div>
                      <%= new Date(Number(new Date()) + ( 7 * 24*60*60*1000)).toDateString() %>
                     </div> <br>

                 </div> <br>

                 

               <div  class="container mx-5px text-center">
                    <button type="submit" class="btn btn-outline-success justify-content-center">Borrow</button>
                </div>

               </div> 
            </form> 
       
        </div>

        
      

    
